###- SERVER Variables

# Port where the API will run
PORT=8080

# Environment mode: test, development or production
NODE_ENV=development

# Max requests allowed per minute (rate limiting)
REQUESTS_PER_MINUTE=1000

# Secret key used to sign JWT tokens (use a strong, random value in production)
JWT_SECRET=your_jwt_secret_here

# Number of bcrypt salt rounds for password hashing
SALT_ROUNDS=10

# Frontend URL allowed for CORS requests
FRONTEND_URL=https://your-frontend-domain.com

###- DATABASE Variables

# Database port
POSTGRES_PORT=5432

# Database name
POSTGRES_DB=db_name

# Database username
POSTGRES_USER=db_user

# Database password
POSTGRES_PASSWORD=db_password

# Main Prisma connection URL (with pooling)
POSTGRES_DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:${POSTGRES_PORT}/${POSTGRES_DB}

# Direct Prisma connection URL (without pooling)
POSTGRES_DATABASE_URL_NON_POOLING=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:${POSTGRES_PORT}/${POSTGRES_DB}

###- DOCKER HUB Variables - These variables are only required for pushing the image to Docker Hub

# Docker Hub username
DOCKER_USERNAME=your_dockerhub_username

# Docker Hub access token
DOCKER_PASSWORD=your_dockerhub_access_token